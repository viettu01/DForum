<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_10sdp"
    tools:context=".fragment.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlShowListForum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/main_color"
                android:paddingVertical="@dimen/_5sdp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/hot_forum"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imvShowMoreForum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@string/xem_them"
                    android:src="@drawable/ic_arrow_right_white_30" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvListForumFeatured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_5sdp"
                android:text="@string/noi_quy_dien_dan"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRulesContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:paddingStart="@dimen/_5sdp"
                android:text="1. Tôn trọng các thành viên: Điều này bao gồm việc không sử dụng ngôn ngữ thô tục hoặc xúc phạm bất kỳ thành viên nào trong diễn đàn. \n2. Không spam: Không được quảng cáo hay chia sẻ các nội dung không liên quan đến lập trình trên diễn đàn. Nếu bạn muốn quảng cáo sản phẩm hay dịch vụ của mình, hãy liên hệ với quản trị viên diễn đàn để biết thêm chi tiết."
                android:textColor="@color/gray_max"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_5sdp"
                android:text="@string/admin_dien_dan"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAdminForum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:paddingStart="@dimen/_5sdp"
                android:text="Nguyễn Văn Mạnh - manhnv291201@gmail.com \nNguyễn Thị Lê - nguyenthile050801@gmail.com \nPhạm Lê Việt Tú - tupham1120@gmail.com"
                android:textColor="@color/gray_max"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_15sdp"
        android:backgroundTint="@color/main_color"
        android:src="@drawable/ic_add_black_24"
        app:elevation="0dp"
        app:maxImageSize="@dimen/_22sdp"
        app:tint="@color/white"
        tools:ignore="ContentDescription,RelativeOverlap" />
</RelativeLayout>