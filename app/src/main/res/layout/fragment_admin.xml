<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentAdmin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    tools:context=".fragment.AdminFragment">

    <Button
        android:id="@+id/btnPostsApprove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/button_radius_10"
        android:text="@string/kiem_duyet_bai_dang" />

    <Button
        android:id="@+id/btnShowListForum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_radius_10"
        android:text="@string/danh_sach_dien_dan" />

</LinearLayout>